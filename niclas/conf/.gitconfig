[user]
	email = n@niclasolofsson.se
	name = Niclas Olofsson

[i18n]
	commitencoding = UTF-8

[branch]
	autosetupmerge = true

[branch "master"]
	remote = origin
	merge = refs/heads/master

[color]
	branch = auto
	diff = auto
	status = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = yellow
	untracked = cyan

[color]
	ui = true

[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

[merge]
	tool = opendiff

[alias]
	track = !sh -c 'git branch --track "$0" "origin/$0" && git checkout "$0"'
	st = status
	ci = commit
	br = branch
	co = checkout
	up = pull --tags origin master
	pu = push --tags origin master
	log = log --topo-order --decorate
        addp = add --patch
        di = diff
        dc = diff --cached
        p = pull --rebase
[push]
	default = current

